<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_6sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_news">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_bnews"
            android:background="@drawable/bgpengumuman"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 januari 2020"
                android:id="@+id/tv_date_news"
                android:textColor="#fff"
                android:layout_gravity="right"
                android:gravity="right"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_titile_news"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:text="Pengumuman Kenaikan Gaji"
                android:textColor="#fff"
                android:textSize="@dimen/_22sdp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>